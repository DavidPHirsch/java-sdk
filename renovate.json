{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchUpdateTypes": ["digest"],
      "fileMatch": [
        "^(workflow-templates|\\.github\\/workflows)\\/[^/]+\\.ya?ml$",
        "(^|\\/)action\\.ya?ml$"
      ],
      "automerge": true
    }
  ]
}
